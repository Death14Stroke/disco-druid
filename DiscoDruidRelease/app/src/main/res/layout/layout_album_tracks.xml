<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foreground_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@drawable/selector_bg">
    <TextView
        android:id="@+id/album_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:maxEms="15"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_track"
        android:gravity="center_vertical"
        android:textColor="@color/colorSelectedTab"
        android:textStyle="bold"
        android:text="Song Name"/>
    <TextView
        android:id="@+id/album_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_track_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_artist"
        android:textStyle="italic"
        android:maxEms="15"
        android:textColor="@android:color/darker_gray"
        android:text="Artist Name"/>
    <TextView
        android:id="@+id/album_track_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:textColor="@color/colorUnselectedTab"
        android:text="03:30"/>
</android.support.constraint.ConstraintLayout>