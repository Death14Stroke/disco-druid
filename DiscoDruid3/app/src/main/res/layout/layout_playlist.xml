<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="playlist"
            type="com.andruid.magic.discodruid.model.PlayList"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_bg">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:background="@drawable/selector_bg"
            android:layout_height="match_parent">
            <ru.nikartm.support.ImageBadgeView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/playlist_title"
                android:id="@+id/playlist_imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:padding="10dp"
                android:ibv_badgeValue="@{playlist.songCount}"
                app:ibv_badgeTextSize="12sp"
                app:ibv_fixedBadgeRadius="15dp"
                app:ibv_badgeTextStyle="bold"
                app:ibv_badgeTextColor="@color/colorPrimaryDark"
                app:ibv_badgeColor="@color/colorSelectedTab"
                app:ibv_badgeLimitValue="false"
                android:src="@drawable/music" />
            <TextView
                android:layout_marginStart="3dp"
                android:id="@+id/playlist_title"
                app:layout_constraintTop_toBottomOf="@id/playlist_imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorSelectedTab"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@{playlist.name}"/>
            <TextView
                android:layout_marginStart="3dp"
                android:id="@+id/playlist_created"
                app:layout_constraintTop_toBottomOf="@id/playlist_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="5dp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:createdOn="@{playlist.dateCreated}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>