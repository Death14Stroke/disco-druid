<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/selector_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_artist"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorSelectedTab"
        android:maxEms="12"
        android:text="Artist name"/>
    <TextView
        android:id="@+id/artist_album_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_album"
        android:drawablePadding="10dp"
        android:textSize="17sp"
        android:textColor="@color/colorUnselectedTab"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="3"/>
    <TextView
        android:id="@+id/artist_song_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="17sp"
        android:textColor="@color/colorUnselectedTab"
        android:textStyle="italic"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/ic_track"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artist_album_count"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="5"/>
</androidx.constraintlayout.widget.ConstraintLayout>