<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <TextView
        android:id="@+id/spinner_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textColor="@color/colorSelectedTab"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spinner_countTV"
        android:text="Playlist name"/>
    <TextView
        android:id="@+id/spinner_countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"

        app:layout_constraintTop_toBottomOf="@id/spinner_nameTV"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="100 songs"/>
</android.support.constraint.ConstraintLayout>