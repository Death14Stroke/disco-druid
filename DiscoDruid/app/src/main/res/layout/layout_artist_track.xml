<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foreground_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg"
    android:padding="7dp">
    <ImageView
        android:id="@+id/artist_track_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/artist_track_nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:textColor="@color/colorSelectedTab"
        android:textStyle="bold"
        android:maxEms="12"
        app:layout_constraintStart_toEndOf="@id/artist_track_thumbnail"
        app:layout_constraintBottom_toTopOf="@id/artist_track_albumTV"
        android:text="Song Name"/>
    <TextView
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic"
        android:maxEms="12"
        android:layout_marginStart="5dp"
        android:id="@+id/artist_track_albumTV"
        app:layout_constraintStart_toEndOf="@id/artist_track_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/artist_track_nameTV"
        android:layout_width="wrap_content"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:text="Artist"/>
    <TextView
        android:id="@+id/artist_track_durationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="03:30"
        android:textColor="@color/colorUnselectedTab"/>
</androidx.constraintlayout.widget.ConstraintLayout>